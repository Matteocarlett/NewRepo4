@model List<Pizzeria.Models.Prodotti>

@{
    ViewBag.Title = "Elenco Pizze";

    string TruncateText(string text, int maxLength)
    {
        if (text.Length <= maxLength)
            return text;
        else
            return text.Substring(0, maxLength) + "...";
    }
}

<style>
    .truncate-text {
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
    }
</style>

<div class="container">
    <div class="row">
        @foreach (var pizza in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 box-shadow">
                    <img class="card-img-top" src="@pizza.Foto" alt="Immagine Pizza" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@pizza.Nome</h5>
                        <div class="card-text">
                            <p class="truncate-text">@TruncateText(pizza.Ingredienti, 45)</p>
                            <p class="full-text" style="display: none;">@pizza.Ingredienti</p>
                            <button class="btn btn-sm btn-outline-secondary expand-button">Altro</button>
                        </div>
                        <p class="card-text">Prezzo: €@pizza.Prezzo</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a href="#" class="btn btn-sm btn-outline-secondary">Aggiungi al carrello</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script>
    document.querySelectorAll('.expand-button').forEach(button => {
        button.addEventListener('click', function () {
            const cardText = this.parentElement.querySelector('.truncate-text');
            const fullText = this.parentElement.querySelector('.full-text');

            if (cardText.style.display === 'none') {
                cardText.style.display = 'block';
                fullText.style.display = 'none';
                this.textContent = 'Altro';
            } else {
                cardText.style.display = 'none';
                fullText.style.display = 'block';
                this.textContent = 'Meno';
            }
        });
    });
</script>
